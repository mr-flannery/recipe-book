<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8" />
    <title>App</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/simplemde/latest/simplemde.min.css">
    <script src="https://cdn.jsdelivr.net/simplemde/latest/simplemde.min.js"></script>
  </head>
  <body>
    <h1>Recipes</h1>
    <h2>Add Recipe</h2>
    <form action="/api/recipes/submit" method="POST">
      <div>
        <label for="name">Name</label>
        <input type="text" name="name" id="name">
      </div>
      <div>
        <label for="ingredients">Ingredients</label>
        <textarea id="ingredients" name="ingredients" rows="5" cols="33">
        </textarea>
      </div>
      <div>
        <label for="instructions">Instructions</label>
        <textarea id="instructions" name="instructions" rows="5" cols="33">
        </textarea>
      </div>
      <div>
        <label for="prepTime">Preparation Time</label>
        <input type="text" name="prepTime" id="prepTime">
      </div>
      <div>
        <label for="cookTime">Cooking Time</label>
        <input type="text" name="cookTime" id="cookTime">
      </div>
      <div>
        <input type="submit" value="Send" accesskey="s" />
      </div>
    </form>

    <h2>Recipe List</h2>
    <ul>
      {{#each recipes}}
        <li>{{name}}</li>
      {{/each}}
    </ul>
    <script>
      const ingredientsEditor = new SimpleMDE({ element: document.getElementById("ingredients") });
      const instructionsEditor = new SimpleMDE({ element: document.getElementById("instructions") });
    </script>
  </body>
</html>
